
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Snake人力资源管理--登录</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            margin: 0px;
            padding: 0px;
            list-style-type: none;
            background-color: aliceblue;
        }

        h2 {
            font-family: "楷体";
            font-weight: bold;
            text-align: center;
            margin-top: 140px;
        }

        #form1 {
            width: 40%;
            height: 360px;
            border-radius: 8px;
            position: absolute;
            top: 180px;
            left: 30%;
            background-color: honeydew;
            box-shadow: 3px 3px 10px gray;
        }

        .form-text {
            text-align: center;
            line-height: 40px;
        }

        p {
            margin-top: 100px;
        }
    </style>
</head>
<body>
    <h2>Snake人力资源管理系统</h2>
    <div id="form1">
        <p></p>
        <div class="form-inline form-group form-text">
            管理：<input type="text" class="form-control" name="LoginName" placeholder="管理员名称">
        </div>
        <div class="form-inline form-group form-text">
            密码：<input type="password" class="form-control" name="LoginPwd" placeholder="管理员密码">
        </div>
        <div class="form-group form-text" style="color:red;" id="error">
        </div>
        <div class="form-group form-text">
            <a href="#" onclick="checkValiad()" class="btn btn-info">登&nbsp;&nbsp;&nbsp;&nbsp;录</a>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

<script type="text/javascript">
    function checkValiad() {
        $.ajax({
            url: "/AdminT/Index",
            type: "post",
            data: { "LoginName": $("input[name='LoginName']").val(), "LoginPwd": $("input[name='LoginPwd']").val() },
            success: function (data) {
                if (data == "false") {
                    $("#error").html("用户名或密码为空！");
                    $("input[name='LoginName']").focus();
                }
                if (data == "false1") {
                    $("#error").html("用户名或密码错误！");
                }
                if (data == "true") {
                    window.location.href = "/AdminT/BgHome";
                }
            },
            error: function (xhr, error, ex) {
                $("#error").html("出现错误，请稍后再试！");
            }
        })
    }
</script>