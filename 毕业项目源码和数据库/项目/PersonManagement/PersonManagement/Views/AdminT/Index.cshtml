
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Snake人力资源管理--登录</title>
    <style>
        body {
            margin: 0px;
            padding: 0px;
            list-style-type: none;
        }
        #form1 {
            width: 50%;
            height: 200px;
            background-color: aliceblue;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <form class="form-horizontal" role="form" id="form1">
        <div class="form-group">
            <label for="LoginName" class="col-sm-2 control-label">管理员账户：</label>
            <div class="col-sm-10">
                <input type="text" name="LoginName" class="form-control" id="firstname" placeholder="请输入管理员账户">
            </div>
        </div>
        <div class="form-group">
            <label for="LoginPwd" class="col-sm-2 control-label">管理员密码：</label>
            <div class="col-sm-10">
                <input type="text" name="LoginPwd" class="form-control" id="lastname" placeholder="请输入管理员密码">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">登录</button>
            </div>
        </div>
    </form>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
