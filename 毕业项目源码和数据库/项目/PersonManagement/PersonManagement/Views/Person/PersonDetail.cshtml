
@{
    ViewBag.Title = "PersonDetail";
    Layout = "~/Views/Shared/_LayoutPerson.cshtml";
}

@using PersonManagement.Models
@{
    Person person = ViewBag.PersonSingleDetail;
}

<style>
    #detail {
        width: 70%;
        height: 400px;
        margin: 100px 15%;
    }
    .title {
        width: 6%;
        font-weight: bold;
    }
    .data_title {
        width: 20%;
    }
</style>

<div id="detail">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><span style="font-weight:bold;">@person.Name</span> 应聘者信息</h3>
        </div>
        <div class="panel-body">
            备注：@person.Remark
        </div>
        <table class="table">
            <tr>
                <td class="title">编号：</td>
                <td class="data_title">@person.ID</td>
                <td class="title">所属部门：</td>
                <td class="data_title">@person.Department.Name</td>
            </tr>
            <tr>
                <td class="title">性别：</td>
                <td class="data_title">@person.Sex</td>
                <td class="title">年龄：</td>
                <td class="data_title">@person.Age</td>
            </tr>
            <tr>
                <td class="title">学历：</td>
                <td class="data_title">@person.Diploma</td>
                <td class="title">专业：</td>
                <td class="data_title">@person.Major</td>
            </tr>
            <tr>
                <td class="title">电话：</td>
                <td class="data_title">@person.Phone</td>
                <td class="title">邮箱：</td>
                <td class="data_title">@person.Email</td>
            </tr>
            <tr>
                <td class="title">地址：</td>
                <td class="data_title">@person.Address</td>
                <td class="title">籍贯：</td>
                <td class="data_title">@person.Native_place</td>
            </tr>
            <tr>
                <td class="title">身份证：</td>
                <td class="data_title">@person.IDCard</td>
                <td class="title"></td>
                <td class="data_title"></td>
            </tr>
        </table>
    </div>
    <a href="/Person/PersonInfo" class="btn btn-info">返回</a>
</div>